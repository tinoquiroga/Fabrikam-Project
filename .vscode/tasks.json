                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                }
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always", 
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
