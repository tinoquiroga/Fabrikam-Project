{
    "version": "2.0.0",
    "// GITHUB COPILOT - READ THIS": "Use run_task tool for all server management. NEVER use run_in_terminal with dotnet run commands!",
    "// CRITICAL RULE": "VS Code tasks for servers, separate terminals for commands - see COPILOT-SERVER-RULES.md",
    "tasks": [
        {
            "// GITHUB_COPILOT_INSTRUCTION": "Use run_task tool with this task ID to start API server - NEVER use run_in_terminal with dotnet run",
            "label": "üöÄ Start API Server",
            "type": "shell",
            "command": "dotnet",
            "args": ["run", "--project", "FabrikamApi/src/FabrikamApi.csproj", "--launch-profile", "https"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                }
            },
            "runOptions": {
                "runOn": "default"
            },
            "isBackground": true,
            "problemMatcher": "$msCompile"
        },
        {
            "label": "ü§ñ Start MCP Server", 
            "type": "shell",
            "command": "dotnet",
