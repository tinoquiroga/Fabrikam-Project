{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "App Service Plans and Web Apps for API and MCP services"
  },
  "parameters": {
    "location": {
      "type": "string"
    },
    "environment": {
      "type": "string"
    },
    "skuName": {
      "type": "string"
    },
    "databaseProvider": {
      "type": "string"
    },
    "authenticationMode": {
      "type": "string"
    },
    "apiPlanName": {
      "type": "string"
    },
    "mcpPlanName": {
      "type": "string"
    },
    "apiAppName": {
      "type": "string"
    },
    "mcpAppName": {
      "type": "string"
    },
    "apiInsightsConnectionString": {
      "type": "string"
    },
    "mcpInsightsConnectionString": {
      "type": "string"
    },
    "keyVaultName": {
      "type": "string"
    },
    "jwtSecretName": {
      "type": "string"
    },
    "sqlConnectionSecretName": {
      "type": "string"
    },
    "apiUrl": {
      "type": "string"
    }
  },
  "variables": {
    "isAuthenticationEnabled": "[not(equals(parameters('authenticationMode'), 'Disabled'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[parameters('apiPlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('skuName')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[parameters('mcpPlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('skuName')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('apiAppName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "identity": {
        "type": "SystemAssigned"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('apiPlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('apiPlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "DOTNETCORE|9.0",
          "alwaysOn": "[if(equals(parameters('skuName'), 'F1'), false(), true())]",
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "appSettings": [
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[parameters('apiInsightsConnectionString')]"
            },
            {
              "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
              "value": "~3"
            },
            {
              "name": "ASPNETCORE_ENVIRONMENT",
              "value": "[parameters('environment')]"
            },
            {
              "name": "Database__Provider",
              "value": "[parameters('databaseProvider')]"
            },
            {
              "name": "ConnectionStrings__DefaultConnection",
              "value": "[if(equals(parameters('databaseProvider'), 'SqlServer'), concat('@Microsoft.KeyVault(VaultName=', parameters('keyVaultName'), ';SecretName=', parameters('sqlConnectionSecretName'), ')'), '')]"
            },
            {
              "name": "Authentication__Strategy",
              "value": "[if(variables('isAuthenticationEnabled'), 'AspNetIdentity', 'Disabled')]"
            },
            {
              "name": "Authentication__Mode",
              "value": "[parameters('authenticationMode')]"
            },
            {
              "name": "Authentication__AspNetIdentity__Jwt__Issuer",
              "value": "[parameters('apiUrl')]"
            },
            {
              "name": "Authentication__AspNetIdentity__Jwt__Audience",
              "value": "fabrikam-api"
            },
            {
              "name": "Authentication__AspNetIdentity__Jwt__SecretKey",
              "value": "[if(variables('isAuthenticationEnabled'), concat('@Microsoft.KeyVault(VaultName=', parameters('keyVaultName'), ';SecretName=', parameters('jwtSecretName'), ')'), '')]"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('mcpAppName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "identity": {
        "type": "SystemAssigned"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('mcpPlanName'))]",
        "[resourceId('Microsoft.Web/sites', parameters('apiAppName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('mcpPlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "DOTNETCORE|9.0",
          "alwaysOn": "[if(equals(parameters('skuName'), 'F1'), false(), true())]",
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "appSettings": [
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[parameters('mcpInsightsConnectionString')]"
            },
            {
              "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
              "value": "~3"
            },
            {
              "name": "ASPNETCORE_ENVIRONMENT",
              "value": "[parameters('environment')]"
            },
            {
              "name": "FabrikamApi__BaseUrl",
              "value": "[parameters('apiUrl')]"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "1"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "apiAppName": {
      "type": "string",
      "value": "[parameters('apiAppName')]"
    },
    "mcpAppName": {
      "type": "string",
      "value": "[parameters('mcpAppName')]"
    },
    "apiAppPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('apiAppName')), '2021-02-01', 'Full').identity.principalId]"
    },
    "mcpAppPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('mcpAppName')), '2021-02-01', 'Full').identity.principalId]"
    }
  }
}
